{
  "name": "geofile",
  "version": "1.0.0",
  "description": "Library to handle Spatial Data file (shapefile, geojson, csv, ...)",
  "main": "index.js",
  "scripts": {
    "compile": "tsc -p .",
    "tar": "tar -czf ./dist/geofile.tgz -C ./dist *.js *.ts  *.map *.json",
    "copy": "cp src/*.js src/*.d.ts package.json ./dist ",
    "build": "run-s compile copy tar",
    "install_s": "cp dist/*.* ../server/node_modules/geofile ",
    "install_c": "cp dist/*.* ../client/node_modules/geofile "
  },
  "author": "Mohamed Ben Zekri",
  "license": "ISC",
  "devDependencies": {
    "@types/jsts": "^0.17.0",
    "@types/node": "^10.11.6",
    "@types/proj4": "^2.3.4",
    "npm-run-all": "^4.1.3",
    "typescript": "^3.1.2"
  },
  "dependencies": {
    "jsts": "^2.0.2",
    "proj4": "^2.5.0"
  }
}
